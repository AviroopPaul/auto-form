{
  "manifest_version": 3,
  "name": "Intelligent Autofill Extension",
  "version": "1.0",
  "description": "Intelligently autofill forms using LLM-powered label deduction and user-defined values.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "all_frames": true
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_page": "options.html",
  "commands": {
    "autofill": {
      "suggested_key": "Ctrl+Shift+F",
      "description": "Auto fill form"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon16.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
